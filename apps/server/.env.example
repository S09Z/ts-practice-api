# Option 2: Separate connection parameters (handles special characters)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=
CORS_ORIGIN=http://localhost:3000
BETTER_AUTH_SECRET=
